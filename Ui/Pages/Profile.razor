@page "/profile"

<PageTitle>Profile</PageTitle>

@if (ShowErrorMessage)
{
    <div class="alert alert-danger" role="alert">
        <p>@Error</p>
    </div>
}

@if (IsInEditState)
{
    <EditForm Model="_userUpdate" OnValidSubmit="Update" class="card card-body bg-light mt-5">
    <DataAnnotationsValidator />
    <div class="form-group row mb-2">
        <label for="firstName" class="col-md-2 col-form-label">First Name:</label>
        <div class="col-md-10">
            <InputText id="firstName" class="form-control" @bind-Value="_userUpdate.FirstName" />
            <ValidationMessage For="@(() => _userUpdate.FirstName)" />
        </div>
    </div>

    <div class="form-group row mb-2">
        <label for="lastName" class="col-md-2 col-form-label">Last Name:</label>
        <div class="col-md-10">
            <InputText id="lastName" class="form-control" @bind-Value="_userUpdate.LastName" />
            <ValidationMessage For="@(() => _userUpdate.LastName)" />
        </div>
    </div>
    
    <div class="form-group row mb-2">
        <label for="presentAddress" class="col-md-2 col-form-label">Present Address:</label>
        <div class="col-md-10">
            <InputTextArea id="presentAddress" class="form-control" @bind-Value="_userUpdate.PresentAddress" />
            <ValidationMessage For="@(() => _userUpdate.PresentAddress)" />
        </div>
    </div>

    <div class="form-group row mb-2">
        <label for="permanentAddress" class="col-md-2 col-form-label">Password:</label>
        <div class="col-md-10">
            <InputTextArea id="permanentAddress" class="form-control" @bind-Value="_userUpdate.PermanentAddress" />
            <ValidationMessage For="@(() => _userUpdate.PermanentAddress)" />
        </div>
    </div>

    <div class="form-group row mb-2">
        <label for="dbo" class="col-md-2 col-form-label">Birth Date:</label>
        <div class="col-md-10">
            <InputText id="dbo" class="form-control" @bind-Value="_userUpdate.DateOfBirth" />
            <ValidationMessage For="@(() => _userUpdate.DateOfBirth)" />
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 text-right">
            <button type="button" @onclick="DisabledEditState" class="btn btn-success">Cancel</button>
            <button type="submit" class="btn btn-success">Update</button>
        </div>
    </div>
</EditForm>
}
else
{
    <ul class="list-group">
        <li class="list-group-item">User Name        : @UserData.UserName</li>
        <li class="list-group-item">Email            : @UserData.Email</li>
        <li class="list-group-item">Phone Number     : @UserData.PhoneNumber</li>
        <li class="list-group-item">First Name       : @UserData.FirstName</li>
        <li class="list-group-item">Last Name        : @UserData.LastName</li>
        <li class="list-group-item">Present Address  : @UserData.PresentAddress</li>
        <li class="list-group-item">Permanent Address: @UserData.PermanentAddress</li>
        <li class="list-group-item">Date Of Birth    : @UserData.DateOfBirth</li>
        <li class="list-group-item">Profile Picture  : @UserData.ProfilePicture</li>
        <li class="list-group-item">Active           : @UserData.IsActive</li>
    </ul>
    <button type="button" @onclick="EnableEditState" class="btn btn-success">Update</button>
}